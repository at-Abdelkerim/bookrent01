generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          String @id @default(uuid())
  role        role   @default(owner)
  email       String @unique
  phoneNumber String @unique
  password    String
  name        String
  location    String
  book        book[]
}

model book {
  id       String @id @default(uuid())
  name     String
  author   String
  category String
  img      String
  price    Int
  quantity Int
  owner    user   @relation(fields: [ownerId], references: [id])
  ownerId  String
}

enum role {
  admin
  owner
}
